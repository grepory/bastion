[Unit]
Description=Bastion - Discovery
After=docker.service
Requires=docker.service nsqd.service

[Service]
User=core
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker stop -t 5 %p
ExecStartPre=-/usr/bin/docker rm %p
ExecStartPre=/usr/bin/docker pull quay.io/opsee/bastion:latest
ExecStart=/usr/bin/docker run --name %p --link connector:nsqd --env-file /etc/opsee/bastion-env.sh quay.io/opsee/bastion:latest /discovery
ExecStop=/usr/bin/docker stop -t 5 %p

[Install]
WantedBy=multi-user.target
