{
	"region": "us-east-1",
	"source-ami": "ami-c36583a8",
	"ami-name": "Opsee-Bastion-{{clean-timestamp}}",
	"ami-description": "Opsee's Bastion Software",
	"instance-type":"t2.micro",
	"ssh-username":"core",
	"staging":"/tmp/staging",
	"ami-tags":[["sha", "{{git-rev}}"], ["release", "build"], ["opsee", "bastion"]],
	"prepare": [
		{
			"type":"systemd",
			"unit-file":"build/bastion.service"
		},
		{
			"type":"waitfor",
			"test":"\"$(curl -I -s --retry 10 --retry-delay 5 http://localhost:4000/health_status | grep 'HTTP')\" = \"HTTP/1.1 200 OK\""
		}
	],
	"reboot-before-build": false,
	"public": false,
	"copy-to": "all",
	"cleanup": true
}