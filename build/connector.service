[Unit]
Description=Bastion - Connector
After=docker.service
Requires=docker.service nsqd.service

[Service]
User=core
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill %p
ExecStartPre=-/usr/bin/docker rm %p
ExecStartPre=/usr/bin/docker pull quay.io/opsee/bastion:latest
ExecStart=/usr/bin/docker run --name %p --link nsqd:nsqd quay.io/opsee/bastion:latest /connector
ExecStop=/usr/bin/docker stop %p

[Install]
WantedBy=multi-user.target
