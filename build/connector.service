[Unit]
Description=Bastion - Connector
After=docker.service
Requires=docker.service nsqd.service

[Service]
User=core
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill %p
ExecStartPre=-/usr/bin/docker rm %p
ExecStartPre=/usr/bin/docker pull quay.io/opsee/zuul:latest
ExecStart=/usr/bin/docker run --name %p --env-file /etc/opsee/bastion-env.sh quay.io/opsee/zuul:latest client
ExecStop=/usr/bin/docker stop %p

[Install]
WantedBy=multi-user.target
